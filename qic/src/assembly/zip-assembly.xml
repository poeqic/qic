<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>buildzip</id>
	<formats>
		<format>zip</format>
	</formats>
	<fileSets>
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>create_desktop_shortcut.vbs</include>
				<include>overlay_config.ini</include>
				<include>qic.ahk</include>
				<include>README.txt</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/lib</directory>
			<outputDirectory>/lib</outputDirectory>
			<includes/>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/keywords</directory>
			<outputDirectory>/keywords</outputDirectory>
			<includes/>
		</fileSet>
		<fileSet>
			<directory>${project.basedir}/resource</directory>
			<outputDirectory>/resource</outputDirectory>
			<includes/>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>/</outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>